#!/bin/bash
set -euo pipefail

DOTFILES_DIR="$HOME/dotfiles"

# Colors
NC='\033[0m'
LBLACK='\033[01;30m'
LRED='\033[01;31m'
LGREEN='\033[01;32m'
OVERWRITE='\e[1A\e[K'

TASK=""

_task() {
    if [[ -n "$TASK" ]]; then
        printf "${OVERWRITE}${LGREEN} [✓]  %s${NC}\n" "$TASK"
    fi
    TASK="$1"
    printf "${LBLACK} [ ]  %s ${NC}\n" "$TASK"
}

_task_done() {
    printf "${OVERWRITE}${LGREEN} [✓]  %s${NC}\n" "$TASK"
    TASK=""
}

_task_fail() {
    printf "${OVERWRITE}${LRED} [X]  %s${NC}\n" "$TASK"
    exit 1
}

_ensure_installed() {
    local cmd="$1"
    local label="$2"
    shift 2

    if hash "$cmd" 2>/dev/null; then
        _task "$label already installed"
        _task_done
        return
    fi

    _task "Installing $label"
    case "$ID" in
        fedora) sudo dnf5 install -y "$@" > /dev/null 2>&1 || _task_fail ;;
        ubuntu|debian) sudo apt-get install -y "$@" > /dev/null 2>&1 || _task_fail ;;
        *) printf "${LRED}Unsupported distro: %s${NC}\n" "$ID"; exit 1 ;;
    esac
}

# Detect distro
if [[ ! -f /etc/os-release ]]; then
    printf "${LRED}Cannot detect distro: /etc/os-release not found${NC}\n"
    exit 1
fi
. /etc/os-release

_ensure_installed python3 "Python3" python3
_ensure_installed pip3 "Pip3" python3-pip

if hash ansible 2>/dev/null; then
    _task "Ansible already installed"
    _task_done
else
    _task "Installing Ansible"
    case "$ID" in
        fedora) sudo dnf5 install -y ansible ansible-lint python3-netaddr > /dev/null 2>&1 || _task_fail ;;
        ubuntu|debian) sudo apt-get install -y ansible ansible-lint python3-netaddr > /dev/null 2>&1 || _task_fail ;;
        *) printf "${LRED}Unsupported distro: %s${NC}\n" "$ID"; exit 1 ;;
    esac
fi

_task "Running playbook"
_task_done
ansible-playbook "$DOTFILES_DIR/main.yml" "$@"

